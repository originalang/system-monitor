<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great&amp;display=swap" rel="stylesheet">
		<link rel="stylesheet" href="css/main.css">
		<title>Temperature Monitor</title>
	</head>
	<body>
		<div class="block-container">
			<% temperature_list.forEach(function(entry){ %>
				<% entry.temperature_sensors.forEach(function(sensor){ %>
					<div class="block" style="background-color: <%= sensor.current < sensor.high - 40 ? '#95ff82' : (sensor.current >= sensor.high ? '#ff7c6b' : '#ffee80') %>">
						<div class="block-content">
							<span class="absolute-center text-large font-fredericka"><%= sensor.current %></span>
						</div>
						<div class="block-description">
							<div class="block-title text-regular">
								<%= sensor.label %>
							</div>					
						</div>
						<div class="block-footer">
							<span class="absolute-center"><%= entry.type %></span>
						</div>
					</div>
				<% }); %>
			<% }); %>
		</div>
	</body>
</html>
